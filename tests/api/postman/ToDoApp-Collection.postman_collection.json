{
  "info": {
    "name": "ToDoApp API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "{{base_url}}"
    }
  ],
  "item": [
    {
      "name": "Health Check - List Tasks",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response time is less than 1000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});",
              "",
              "pm.test('Response is JSON array', function () {",
              "    pm.response.to.be.json;",
              "    pm.expect(pm.response.json()).to.be.an('array');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/tasks/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", ""]
        }
      }
    },
    {
      "name": "Create Task",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response time is less than 1000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});",
              "",
              "pm.test('Response has required fields', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response).to.have.property('id');",
              "    pm.expect(response).to.have.property('title');",
              "    pm.expect(response).to.have.property('complete');",
              "    pm.expect(response).to.have.property('created');",
              "});",
              "",
              "pm.test('Task title matches request', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.title).to.eql('Test Task');",
              "});",
              "",
              "// Store task ID for subsequent tests",
              "pm.environment.set('task_id', pm.response.json().id);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Test Task\",\n  \"complete\": false\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tasks/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", ""]
        }
      }
    },
    {
      "name": "Get Task by ID",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response time is less than 1000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});",
              "",
              "pm.test('Response has correct task', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.id).to.eql(parseInt(pm.environment.get('task_id')));",
              "    pm.expect(response.title).to.eql('Test Task');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/tasks/{{task_id}}/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "{{task_id}}", ""]
        }
      }
    },
    {
      "name": "Update Task",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response time is less than 1000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});",
              "",
              "pm.test('Task was updated', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.title).to.eql('Updated Test Task');",
              "    pm.expect(response.complete).to.eql(true);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Test Task\",\n  \"complete\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tasks/{{task_id}}/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "{{task_id}}", ""]
        }
      }
    },
    {
      "name": "Delete Task",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 204', function () {",
              "    pm.response.to.have.status(204);",
              "});",
              "",
              "pm.test('Response time is less than 1000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/tasks/{{task_id}}/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "{{task_id}}", ""]
        }
      }
    },
    {
      "name": "Create Task - Invalid Data (400)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 400', function () {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test('Response time is less than 1000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});",
              "",
              "pm.test('Response contains error details', function () {",
              "    pm.response.to.be.json;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"complete\": \"invalid_boolean\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tasks/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", ""]
        }
      }
    },
    {
      "name": "Get Non-existent Task (404)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 404', function () {",
              "    pm.response.to.have.status(404);",
              "});",
              "",
              "pm.test('Response time is less than 1000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/tasks/99999/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "99999", ""]
        }
      }
    }
  ]
}